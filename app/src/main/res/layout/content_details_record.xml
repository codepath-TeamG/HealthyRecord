<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:background="@color/lightblue"
    android:layout_height="match_parent"
    tools:context="com.example.zen.healthyrecord.LoginActivity">

    <ImageView
        android:id="@+id/photoView"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/top_photo_healthy" />
    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        android:id="@+id/progressBar" />

    <TextView
        android:id="@+id/tvDateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/photoView"
        android:text="@string/date"/>

    <TextView
        android:id="@+id/tvDateValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2017/1/30"
        android:layout_below="@+id/photoView"
        android:layout_toRightOf="@+id/tvDateLabel"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="100dp"/>

    <TextView
        android:id="@+id/tvTimeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/time"
        android:layout_below="@+id/tvDateLabel"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/tvTimeValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lunch"
        android:layout_below="@+id/tvDateValue"
        android:layout_marginTop="20dp"
        android:layout_alignStart="@+id/tvDateValue" />

    <TextView
        android:id="@+id/tvFoodLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTimeLabel"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="CONTENT"/>

    <TextView
        android:id="@+id/tvFoodValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTimeValue"
        android:layout_marginTop="20dp"
        android:text="Test_Food"
        android:layout_alignStart="@+id/tvDateValue"/>

    <TextView
        android:id="@+id/tvQuantLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cal"
        android:layout_below="@+id/tvFoodLabel"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/tvQuantValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvFoodValue"
        android:layout_marginTop="20dp"
        android:text="1"
        android:layout_alignStart="@+id/tvDateValue"/>

    <TextView
        android:id="@+id/tvMemoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/memo"
        android:layout_below="@+id/tvQuantLabel"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:lines="2"/>

    <TextView
        android:id="@+id/tvMemoValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvQuantValue"
        android:layout_marginTop="20dp"
        android:text="this is the test text on memo"
        android:layout_alignStart="@+id/tvDateValue"
        android:lines="2"/>

    <TextView
        android:id="@+id/tvStatusLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/status"
        android:layout_below="@+id/tvMemoLabel"
        android:paddingTop="20dp"
        android:paddingLeft="20dp" />

    <RatingBar
        android:id="@+id/ratingBarValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvMemoValue"
        android:theme="@style/RatingBar"
        android:layout_marginTop="20dp"
        android:isIndicator="true"
        android:layout_alignStart="@+id/tvDateValue" />

</RelativeLayout>


